@{
    Layout = null;
}
@using System.Web.Optimization
@using System.Reflection

@{
    WebPageHttpHandler.DisableWebPagesResponseHeader = true;
    System.Web.Mvc.MvcHandler.DisableMvcResponseHeader = true;
    Response.OutputCache(0);
}

<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    @Scripts.Render("~/bundles/modernizr")
    <title>PayBuddy</title>
</head>
<body ng-controller="appCtrl" ng-init="preventBack()" style=" background-image: url('Content/Images/theme.png');">

    <div ng-view></div>

    @Scripts.Render("~/bundles/jQuery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    <script src="~/Scripts/lib/angular/ui.bootstrap.js"></script>
    @Scripts.Render("~/bundles/rx")
    @Scripts.Render("~/bundles/appstart")
    @Scripts.Render("~/bundles/dataServices")
    @Scripts.Render("~/bundles/controllers")

</body>
</html>
